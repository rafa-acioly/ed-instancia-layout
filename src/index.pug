extends layouts/app
block content
  .hero.is-fullheight#main
    .hero-head
      header.nav
        .container
          .nav-left
            a(href="").nav-item
              img(src="assets/images/nav-logo.png", alt="logotipo")
          .nav-right
            .nav-item
              .contact-item
                a(href="") Fale com um
                  |
                  |
                  span corretor
    .hero-body.has-text-centered
      .container
        h1.title.is-super O Maior e 
          br
          | mais moderno
        h2.subtitle.is-super Prédio de Poá
    .hero-foot.has-text-centered
      .scroll-down
        img(src="assets/images/mouse.png", alt="view more")
  section.section#resources
    .columns
      .column.is-8.is-offset-2
        .columns.is-multiline
          -var qtd = {1: 'Varanda Gourmet', 2: 'Playground', 3: 'Salão Gourmet', 4: 'Solário', 5: 'Brinquedoteca', 6: 'Churrascaria', 7: 'Garagem', 8: 'Espaço Esportivo', 9: 'Piscina Infantil e Adulta', 10: 'Vestiários', 11: 'Academia', 12: 'Pet Plat'}
          for caption, index in qtd
            .column.is-2
              figure.has-text-centered
                img(src="assets/images/ICONE-"+index+".png", alt="")
                figcaption
                  =caption

  section.section.has-text-centered#gallery
    h1.title Galeria de fotos
    img(src="http://placehold.it/150x150", alt="")
    img(src="http://placehold.it/150x150", alt="")
